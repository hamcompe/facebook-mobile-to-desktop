{
  "manifest_version": 2,
  "name": "Facebook mobile to desktop",
  "description":
    "Converts Facebook's mobile site to desktop site in one click.",
  "version": "1.0.4",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon@16.png",
    "48": "icons/icon@48.png",
    "128": "icons/icon@128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon@16.png",
      "48": "icons/icon@48.png",
      "128": "icons/icon@128.png"
    }
  },
  "permissions": ["tabs", "declarativeContent"]
}
